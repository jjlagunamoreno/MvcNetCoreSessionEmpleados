@model List<Empleado>

@{
    ViewData["Title"] = "Empleados Favoritos";
}

<h1 class="text-center text-fuchsia">Empleados Favoritos</h1>

<p class="mt-3">
    <a asp-controller="Empleados" asp-action="SessionEmpleadosV5" class="btn btn-primary">
        Volver a almacenar empleados V5
    </a>
</p>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning text-center">
        <h4>No hay empleados favoritos almacenados.</h4>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-danger">
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th>Departamento</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td>@emp.IdDepartamento</td>
                    <td>
                        <a asp-controller="Empleados"
                           asp-action="EliminarFavorito"
                           asp-route-idempleado="@emp.IdEmpleado"
                           class="btn btn-outline-danger btn-sm">
                            Quitar Favorito ❌
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
